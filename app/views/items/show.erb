
<span data-user-id="<%= logged_in_user.id %>" id="user-id"></span>

<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1 class="text-center"><%= @item.title %></h1>
    <hr>
    <div class="row">
      <div class="col-md-5">
        <a class="image-popup-fit-width hoverZoomLink" href="<%=@item.image_path%>" title="<%=@item.title%>">
          <img src="<%=@item.image_path%>" class="details-image" alt="<%= @item.title%>" title="<%= @item.title%>">
          <span class="plus glyphicon glyphicon-plus"></span>
        </a>


      </div>
      <div class="col-md-7">
        <div class="row">
          <div class="col-md-3">
            <p class="text-center">
          
            <svg class="icon is-x2 is-outlined is-hoverable is-transit is-activeable like-button<%= " is-liked" if logged_in_user.has_liked(@item) %>" viewBox="0 0 32 32" data-item-id="<%=@item.id%>">
              <use xlink:href="#heart-icon"></use>
            </svg>
            </p>
            <p class="likes text-center"><div class="likes-count"><%= @item.num_likes %></div> Likes</p>

          </div>

          <div class="col-md-9">
            <p><strong>Posted by</strong>: <a href="/users/<%=@item.user_id%>"><%= @item.user.username %></a></p>
            <p><strong>Price</strong>: $<%= @item.price %></p>
            <p><strong>Location</strong>: <%= @item.location%></p>
          </div>

        </div>
        <p>
          <%= @item.description %>
        </p>

      </div>
    </div>
    <hr>

    <div class="row">
      <div class="col-md-12">

      <% @item.comments.each do |comment| %>
        <h3><a href="/users/<%=comment.user_id%>"><%= comment.user.username %></a></h3>
        <p><%=comment.text%></p>
      <% end %>

       
      </div>
      <% if logged_in_user.id? %>
      <div class="col-md-2"></div>
      <div class="col-md-8">

        <form id="postNewComment" class="form-horizontal" method="post" action="/items/<%=@item.id%>" enctype='multipart/form-data'>

            <div class="form-group form-group-lg">
              <div class="col-sm-12">
                <textarea rows="4" name="text" class="form-control" maxlength="300" required></textarea>
              </div>
            </div>

            <div class="form-group form-group-lg">
              <div class="col-sm-12">
                <button type="submit" class="btn btn-default btn-lg">POST A COMMENT</button>
              </div>
            </div>
        </form>
      </div>
      <div class="col-md-2"></div>
      <% end %>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>
