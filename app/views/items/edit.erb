<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <h1 class="text-left"><%= @user.username %></h1>
        <p class="text-left"><%= @user.name %> | <%= @user.email %></p>
      </div>
      <div class="col-md-6">

      </div>
    </div>

    <hr>
    <a name="spots"></a><h1>My Spots</h1>

    <% @user.items.each do |item| %>

      <div class="row">
        <div class="col-md-4">
            <img src="<%=item.image_path%>" class="details-image" alt="<%= item.title%>" title="<%= item.title%>">
        </div>

        <div class="col-md-6">
          <h3><a href="#" id="finditem" data-type="finditem" data-pk="<%= item.id %>" data-url="/items/<%= item.id %>"><%= item.title %></a></h3>
          <p><strong>Price</strong>: $<%= item.price %></p>
          <p><strong>Location</strong>: <%= item.location %></p>
        </div>
        <div class="col-md-2">
          <%= erb :_like_button, locals: { item: item } %>
        </div>
      </div>

      <hr>
    <% end %>

    </div>
  </div>
  <div class="col-md-2"></div>
</div>
