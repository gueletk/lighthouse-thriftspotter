<div class="row">
  <div class="col-md-6">
    <img src="<%=@item.image_path%>" class="details-image" alt="<%= @item.title%>" title="<%= @item.title%>">
  </div>

  <div class="col-md-6">
    <h1 class="text-center">Edit your Find</h1>
    <hr>

  <form id="editFind" class="form-horizontal" method="post" action="/items/<%= @item.id %>" enctype='multipart/form-data'>
    <input type="hidden" name="_method" value="put">
      <div class="form-group form-group-lg">
        <label class="col-sm-3 control-label">* Title</label>
        <div class="col-sm-7">
          <input type="text" name="title" class="form-control" maxlength="50" value="<%= @item.title %>">
        </div>
      </div>

      <div class="form-group form-group-lg">
        <label class="col-sm-3 control-label">* Category</label>
        <div class="col-sm-7">
          <select class="form-control" name="category">
          <option selected><%=@item.category.name%></option>
            <% Category.all.each do |category| %>
            <% if category.name == @item.category.name %>
               <option selected><%= category.name %></option>
             <% else %>
               <option><%= category.name %></option>
             <% end %>
            <% end %>
          </select>
        </div>
      </div>


      <div class="form-group form-group-lg">
        <label class="col-sm-3 control-label">* Description</label>
        <div class="col-sm-7">
          <textarea rows="6" name="description" class="form-control" maxlength="300" required><%= @item.description %></textarea>
        </div>
      </div>



      <div class="form-group form-group-lg">
         <label class="col-sm-3 control-label">New Image</label>
         <div class="col-sm-7">
           <input type="file" name="image" accept=".jpeg,.png,.tif,.jpg,.bmp">
         </div>
       </div>

      <div class="form-group form-group-lg">
        <label class="col-sm-3 control-label">Price</label>
        <div class="col-sm-3">
          <input type="text" name="price" class="form-control" maxlength="10" value="<%= @item.price %>">
        </div>
      </div>

      <div class="form-group form-group-lg">
        <label class="col-sm-3 control-label">* Location</label>
        <div class="col-sm-9">

              <input  name= "location" class="form-control" type="text" value="<%= @item.location %>">

         <!--      <div id="map"></div> -->


        </div>
      </div>
      <div class="form-group form-group-lg">
        <div class="col-sm-offset-3 col-sm-7">
          <button type="submit" class="btn btn-default btn-lg">SUBMIT</button>
        </div>
      </div>
  </form>



  </div>
  <div class="col-md-2"></div>
</div>
<script src="/javascript/map.js"></script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCTbeQc-SCnCKLpYePwXmYPwXcvd_LRGtk&libraries=places&callback=initMap"></script>
<script type="text/javascript">
  $('#delete-item').onclick="form.submit()";
</script>


