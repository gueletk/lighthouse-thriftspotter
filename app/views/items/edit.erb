<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <div class="row">
      <div class="col-md-6">
        <h1 class="text-left"><%= @user.username %></h1>
        <p class="text-left"><%= @user.name %> | <%= @user.email %></p>
      </div>
      <div class="col-md-6">

      </div>
    </div>

    <hr>
    <a name="spots"></a><h1>My Spots</h1>

    <% @user.items.each do |item| %>

      <div class="row">
        <div class="col-md-4">
            <img src="<%=item.image_path%>" class="details-image" alt="<%= item.title%>" title="<%= item.title%>">
        </div>

        <div class="col-md-3">
          <h3>
              <p><strong>Title: </strong></p>
              <p><strong>Price</strong>: $</p>
              <p><strong>Location</strong>:</p>
          </h3>
        </div>

        <div class="col-md-4">
          <h3>

            <a href="#" id="finditem" data-type="finditem" data-pk="<%= item.id %>" data-url="/items/<%= item.id %>">
              <h3 id="title"><%= item.title %></h3>
              <p id="price"><%= item.price %></p>
              <p id="location"><%= item.location %></p>
            </a></h3>

        </div>
        <div class="col-md-2">
          <%= erb :_like_button, locals: { item: item } %>
        </div>
      </div>

      <hr>
    <% end %>

    </div>
  </div>
  <div class="col-md-2"></div>
</div>
